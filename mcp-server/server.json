{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.varun29ankuS/shodh-memory",
  "description": "Persistent AI memory with semantic search. Store and recall context across sessions.",
  "repository": {
    "url": "https://github.com/varun29ankuS/shodh-memory",
    "source": "github",
    "subfolder": "mcp-server"
  },
  "version": "0.1.4",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@shodh/memory-mcp",
      "version": "0.1.4",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "SHODH_API_URL",
          "description": "URL of the shodh-memory backend server",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "default": "http://127.0.0.1:3030"
        },
        {
          "name": "SHODH_API_KEY",
          "description": "API key for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "SHODH_USER_ID",
          "description": "User ID for memory isolation",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "default": "default"
        }
      ]
    }
  ]
}
