{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.varun29ankuS/shodh-memory",
  "description": "Persistent AI memory with semantic search. Store and recall context across sessions.",
  "icons": [
    {
      "src": "https://raw.githubusercontent.com/varun29ankuS/shodh-memory/main/assets/logo.png",
      "mimeType": "image/png",
      "sizes": ["120x120"]
    },
    {
      "src": "https://raw.githubusercontent.com/varun29ankuS/shodh-memory/main/assets/logo_32x32.png",
      "mimeType": "image/png",
      "sizes": ["32x32"]
    }
  ],
  "repository": {
    "url": "https://github.com/varun29ankuS/shodh-memory",
    "source": "github",
    "subfolder": "mcp-server"
  },
  "version": "0.1.8",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@shodh/memory-mcp",
      "version": "0.1.8",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "SHODH_API_URL",
          "description": "URL of the shodh-memory backend server",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "default": "http://127.0.0.1:3030"
        },
        {
          "name": "SHODH_API_KEY",
          "description": "API key for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": true
        },
        {
          "name": "SHODH_USER_ID",
          "description": "User ID for memory isolation",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "default": "default"
        }
      ]
    }
  ]
}
